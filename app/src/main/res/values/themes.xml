    </style>

    <style name="Theme.HoroscApp" parent="Base.Theme.HoroscApp">
        <item name="android:statusBarColor">@color/primaryDark</item>
    </style>

    <style name="titleStyle">
        <item name="android:textStyle">bold</item>
